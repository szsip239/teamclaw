# ─── Database ────────────────────────────────────────────
DATABASE_URL="postgresql://teamclaw:teamclaw_dev_2024@localhost:5432/teamclaw?schema=public"

# ─── Redis ───────────────────────────────────────────────
REDIS_URL="redis://localhost:6379"

# ─── JWT RS256 Keys (Base64 encoded) ─────────────────────
# Generate with: node scripts/generate-keys.mjs
JWT_PRIVATE_KEY="<base64-encoded-RS256-private-key>"
JWT_PUBLIC_KEY="<base64-encoded-RS256-public-key>"

# ─── JWT Configuration ───────────────────────────────────
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"
JWT_ISSUER="teamclaw"

# ─── Encryption ──────────────────────────────────────────
# 32-byte hex key for AES-256-CBC. Generate with: openssl rand -hex 32
ENCRYPTION_KEY="<64-char-hex-string>"

# ─── App ─────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL="http://localhost:3100"
NODE_ENV="development"

# ─── OpenClaw Instance Defaults ──────────────────────────
# Default model provider for new instances (used when no per-instance key is specified)
DEFAULT_MODEL_PROVIDER="anthropic"
DEFAULT_MODEL_API_KEY=""
DEFAULT_MODEL_BASE_URL="https://api.anthropic.com"
DEFAULT_MODEL_API_TYPE="anthropic-messages"

# Instance data storage directory (host path for Docker volume mounts)
TEAMCLAW_DATA_DIR=""
# Default Docker image for new OpenClaw instances
DEFAULT_OPENCLAW_IMAGE="alpine/openclaw:latest"
